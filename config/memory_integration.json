{
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug_mode": false,
    "enable_cors": true,
    "allowed_origins": ["*"],
    "request_timeout": 30,
    "max_request_size": 10485760
  },
  "memory": {
    "storage_path": "data/memory",
    "conversation_memory_file": "conversation_memory.jsonl",
    "language_memory_file": "language_memory.jsonl",
    "synthesis_memory_file": "synthesis_memory.jsonl",
    "backup_interval_minutes": 60,
    "max_memory_entries": 10000,
    "retention_policy": "fifo"
  },
  "integration": {
    "llm_provider": "openai",
    "embedding_model": "text-embedding-3-small",
    "synthesis_model": "gpt-4-turbo",
    "default_temperature": 0.7,
    "context_window_tokens": 8192,
    "max_output_tokens": 2048,
    "auto_summarize_threshold": 50,
    "synthesis_depth_levels": 3
  },
  "authentication": {
    "require_api_key": false,
    "api_key_header": "X-API-Key",
    "default_api_key": "",
    "rate_limit_per_minute": 60
  },
  "logging": {
    "level": "info",
    "file_path": "logs/memory_api.log",
    "max_log_size_mb": 10,
    "backup_count": 5,
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "advanced": {
    "enable_memory_compression": true,
    "enable_topic_clustering": true,
    "similarity_threshold": 0.75,
    "use_semantic_search": true,
    "max_related_memories": 10,
    "enable_streaming_response": false,
    "memory_ttl_days": 90
  }
} 