FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
COPY test-requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt -r test-requirements.txt

# Copy test files
COPY tests/ /app/tests/
COPY pytest.ini .
COPY conftest.py .

# Create results directory
RUN mkdir -p /app/test-results

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["pytest", "--junitxml=/app/test-results/junit.xml", "--html=/app/test-results/report.html"]

COPY check_connections.py .

CMD ["python", "check_connections.py"] 