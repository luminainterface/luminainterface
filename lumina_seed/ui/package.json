{
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.0",
		"@radix-ui/react-dialog": "^1.1.11",
		"@radix-ui/react-dropdown-menu": "^2.1.12",
		"@radix-ui/react-toast": "^1.2.11",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.2.0",
		"lucide-react": "^0.507.0",
		"chart.js": "^4.4.9",
		"react-chartjs-2": "^5.3.0",
		"zustand": "^5.0.4",
		"socket.io-client": "^4.8.1",
		"@types/react": "^19.1.2",
		"@types/node": "^22.15.3",
		"@types/react-dom": "^19.1.3"
	},
	"name": "lumina-chat-ui",
	"version": "1.0.0",
	"description": "Lightweight chat interface for Lumina AI platform",
	"scripts": {
		"start": "node serve.js",
		"format": "prettier --write \"**/*.{js,json,md}\"",
		"lint": "eslint . --ext .js",
		"lint:fix": "eslint . --ext .js --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:a11y": "jest tests/a11y.test.js --reporters=default --reporters=jest-html-reporter",
		"lighthouse": "lhci autorun"
	},
	"devDependencies": {
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"@testing-library/jest-dom": "^6.4.2",
		"jest-axe": "^7.0.1",
		"jest-html-reporter": "^3.10.2",
		"@lhci/cli": "^0.15.0"
	},
	"jest": {
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom",
			"<rootDir>/tests/setup.js"
		],
		"moduleNameMapper": {
			"\\.(css|less|scss|sass)$": "identity-obj-proxy"
		},
		"reporters": [
			"default",
			[
				"jest-html-reporter",
				{
					"pageTitle": "Lumina UI Accessibility Report",
					"outputPath": "reports/a11y/report.html",
					"includeFailureMsg": true,
					"includeSuiteFailure": true
				}
			]
		]
	},
	"lighthouse": {
		"ci": {
			"collect": {
				"url": ["http://localhost:3000"],
				"numberOfRuns": 3
			},
			"assert": {
				"assertions": {
					"categories:performance": ["error", {"minScore": 0.9}],
					"categories:accessibility": ["error", {"minScore": 0.9}],
					"categories:best-practices": ["error", {"minScore": 0.9}]
				}
			},
			"upload": {
				"target": "temporary-public-storage"
			}
		}
	}
}
